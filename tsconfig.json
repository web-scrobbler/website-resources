{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "isolatedModules": true,

    "jsx": "preserve",

    "paths": {
      "@/*": ["/index.ts"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020"
  },
  "include": ["**/*.ts"]
}
